<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id),method: :patch do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>
  
  <label>Body</label>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book'%>

<% end %>

<%= link_to "show",book_path %> |
<%= link_to "back", books_path %>