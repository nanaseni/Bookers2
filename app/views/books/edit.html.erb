<h1>Editing Book</h1>
<% if @book.errors.any? %>
   <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
   <ul>
         <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
   </ul>
<% end %>
<%= form_with model: @book, url: book_path(@book.id),method: :patch do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>
  
  <label>Body</label>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book'%>

<% end %>

